{% apply spaceless %}
<header>
        <!-- LOGO-->
        <div id="logo">
            <a href="index.php" title="{{misc.home_page_title}}">
                <img src="ressources/images/logo_pattern/logo.png" alt="{{misc.logo_alt}}" width="100">
                <h1>ORPH&Eacute;A</h1>
            </a>
        </div>
        <!-- MENU-->
        <nav>
            <ul>
            {% if header.current == 'index.php' %}
                <li><a href="index.php" title="{{header.home_page_title}}"><strong>{{header.home_page|upper}}</strong></a></li>
            {% else %}
                <li><a href="index.php" title="{{header.home_page_title}}">{{header.home_page|upper}}</a></li>
