            {% if header.current == 'about.php' %}
                 <li><a href="about.php" title="{{header.about_page_title}}"><strong>{{header.about_page|upper}}</strong></a></li>
            {% else %}
                 <li><a href="about.php" title="{{header.about_page_title}}">{{header.about_page|upper}}</a></li>
            {% endif %}

            {% if misc.loggin %}
                {% if header.current == 'dashboard.php' %}
