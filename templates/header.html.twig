                {% else %}
                        <li><a href="dashboard.php" title="{{header.dashboard_page_title}}">{{header.dashboard_page|upper}}</a></li>
                {% endif %}
                
                <li><a href="logout.php" class='nr' title="{{header.logout_page_title}}">{{header.logout_page|upper}}</a></li>
            {% else %}
                {% if header.current == 'login.php' %}
                        <li><a href="login.php" title="{{header.login_page_title}}"><strong>{{header.login_page|upper}}</strong></a></li>
                {% else %}
                        <li><a href="login.php" title="{{header.login_page_title}}">{{header.login_page|upper}}</a></li>
                {% endif %}
                
            {% endif %}
            </ul>
        </nav>
        <!--BACKGROUND PICTURE-->
        <img src="ressources/images/footage/background_main.jpg" width="500" alt="{{header.background_alt}}">

    </header>

